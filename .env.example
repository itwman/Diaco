# ===================================
# Diaco MES - Environment Variables
# ===================================
# این فایل را کپی کنید: cp .env.example .env
# سپس مقادیر واقعی را وارد کنید

# ─── Security ──────────────────────
# کلید جدید با دستور زیر بسازید:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-change-this-in-production

# ─── Debug ─────────────────────────
# روی سرور production مقدار False باشد
DEBUG=True

# ─── Database ──────────────────────
DB_NAME=diaco_mes
DB_USER=root
DB_PASSWORD=
DB_HOST=127.0.0.1
DB_PORT=3306

# ─── Allowed Hosts ─────────────────
# روی سرور، دامین یا IP واقعی وارد کنید
ALLOWED_HOSTS=localhost,127.0.0.1
